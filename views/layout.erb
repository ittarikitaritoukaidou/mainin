<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <link rel="shortcut icon" href="/images/favicon.png">
    <title>
      <%- if @title -%>
        <%= @title %> - 旅のお供
      <%- else -%>
        旅のお供
      <%- end -%>
    </title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/style"/>

  </head>
  <body class="page-<%= @page_id %>" data-page-id="<%= @page_id %>">
    <header>
      <h1 class="title"><a href="/">
        <img src="/images/logo.svg" alt="旅のお供">
      </a></h1>
      <% if @back_to %>
        <a href="<%= to @back_to %>" class="undo-btn"><i class="fa fa-chevron-left"></i>戻る</a>
      <% end %>
    </header>
    <div class="container">
      <%== yield %>
    </div>
    <footer>
      <small>©行ったり来たり東海道</small>
    </footer>
    <script type="text/javascript" src="/js/vendor/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/js/vendor/underscore/underscore-min.js"></script>
    <script type="text/javascript" src="/js/vendor/jquery-sortable/source/js/jquery-sortable-min.js"></script>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places"></script>
    <script type="text/javascript" src="/js"></script>
  </body>
</html>
