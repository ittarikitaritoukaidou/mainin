<form id="activity_edit_form" action="<%= to(@activity.edit_path) %>" method="post">
  <div>
    <input name="title" type="text" placeholder="例：水族館" required value="<%= @activity.title %>" />
  </div>

  <h3>メモ</h3>
  <textarea name="memo" placeholder="エイヒレの本体を見れます"><%= @activity.memo %></textarea>
  <input type="hidden" name="location" value="<%= @activity.location %>" class="js-location-input" />
  <input type="hidden" name="authenticity_token" value="<%= csrf_token %>" />
</form>
<% # コメント %>

<h3>場所</h3>
<div>
<form class="js-search-form">
  <label>
    検索
  <input type="search" name="address" class="js-address-input">
  </label>
</form>
</div>

<div class="preview js-map-container">
  <div class="js-map" style="width: 200px; height: 200px;"></div>
</div>

<div>
  <input type="submit" value="保存" form="activity_edit_form">
</div>

<form method="POST" action="<%= @activity.delete_path %>" onsubmit="return confirm('この行き先を削除しますか？\n一度削除した行き先は取り消せません')">
  <input type="hidden" name="authenticity_token" value="<%= csrf_token %>" />
  <input type="submit" value="この行き先を削除する">
</button>
